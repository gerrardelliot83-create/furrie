{
  "rewrites": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "vet.furrie.in" }],
      "destination": "/vet-portal/:path*"
    },
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "admin.furrie.in" }],
      "destination": "/admin-portal/:path*"
    },
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "app.furrie.in" }],
      "destination": "/customer-portal/:path*"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/send-reminders",
      "schedule": "*/5 * * * *"
    },
    {
      "path": "/api/cron/mark-missed",
      "schedule": "*/5 * * * *"
    }
  ]
}
